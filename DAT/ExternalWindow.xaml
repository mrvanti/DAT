<Window x:Class="DAT.ExternalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAT"
        mc:Ignorable="d"
        Title="ExternalWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="BorderThickness" Value="2px"></Setter>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"></Setter>
                </Style>
            </Style.Resources>
        </Style>
        <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox" x:Key="Label">
            <Setter Property="FontSize" Value="120"></Setter>
            <Setter Property="Height" Value="190"></Setter>
            <Setter Property="Width" Value="190"></Setter>
        </Style>
        <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox" x:Key="Clock">
            <Setter Property="FontSize" Value="25"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="65"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"></Setter>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Width" Value="158"></Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <TextBox IsReadOnly="True" Style="{StaticResource Label}" x:Name="WhiteScore" Background="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  TextWrapping="Wrap" Text="0" VerticalAlignment="Top" HorizontalAlignment="Right"  Margin="0,112,160,0"/>
        <TextBox IsReadOnly="True" Style="{StaticResource Label}" x:Name="BlueScore" Background="Blue" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  TextWrapping="Wrap" Text="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="160,112,0,0"/>
        <TextBox IsReadOnly="True" Style="{StaticResource Label}" x:Name="Result" Background="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  TextWrapping="Wrap" Text="Resultat" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,315,0,0" Height="109" Width="458"/>
        <TextBox IsReadOnly="True" Style="{StaticResource Label}" x:Name="Clock" Background="White" TextWrapping="Wrap" Text="0:00" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Height="171" Width="396" TextAlignment="Center" TextChanged="Clock_TextChanged"/>

    </Grid>
</Window>
